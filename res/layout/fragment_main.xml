<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainPageBackgroundColor" >

    <ImageButton
        android:id="@+id/mainpage_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_default_small"
        android:contentDescription="@string/mainpage_back_contentDescription"
        android:src="@drawable/mainpage_back" />

    <ProgressBar
        android:id="@+id/batteryProgressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="125dp"
        android:layout_height="59dp"
        android:layout_x="2dp"
        android:layout_y="106dp"
        android:max="100"
        android:progress="20"
        android:progressDrawable="@drawable/progressbar_battery" />

    <LinearLayout
        android:layout_width="164dp"
        android:layout_height="93dp"
        android:layout_x="5dp"
        android:layout_y="187dp" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="94dp"
            android:src="@drawable/volume_lable" />

        <ProgressBar
            android:id="@+id/volumeProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_marginTop="13dp"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar_volume" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/mainpage_incvolume"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/RED"
                android:text="inc" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <Button
                android:id="@+id/mainpage_decvolume"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/BLUE"
                android:text="dec" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/mainpage_createteam"
        android:layout_width="71dp"
        android:layout_height="68dp"
        android:layout_x="164dp"
        android:layout_y="-2dp"
        android:text="Create Team" />

    <Button
        android:id="@+id/mainpage_scan"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:layout_x="160dp"
        android:layout_y="214dp"
        android:background="@color/BLACK"
        android:text="SCAN"
        android:textColor="@color/WHITE" />

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_x="139dp"
        android:layout_y="84dp" >

        <ImageView
            android:id="@+id/compass_pointer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/compass_pointer" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/wifiIntensity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="235dp"
        android:layout_y="86dp"
        android:src="@drawable/wifi_intensity_levellist" />

    <Button
        android:id="@+id/mainpage_resetwifi"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_x="247dp"
        android:layout_y="2dp"
        android:text="Reset Wifi" />

    <ImageView
        android:id="@+id/mainpage_connection_establish_indicator"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_x="264dp"
        android:layout_y="120dp"
        android:src="@drawable/error" />

</AbsoluteLayout>