<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainPageBackgroundColor" >

    <Button
        android:id="@+id/mainpage_createteam"
        android:layout_width="71dp"
        android:layout_height="68dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mainpage_back_button"
        android:text="Create Team"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/mainpage_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:drawable/btn_default_small"
        android:contentDescription="@string/mainpage_back_contentDescription"
        android:src="@drawable/mainpage_back"
        android:visibility="gone" />

    <Button
        android:id="@+id/mainpage_resetwifi"
        android:layout_width="72dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mainpage_createteam"
        android:text="Reset Wifi"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/batterylayout"
        android:layout_width="126dp"
        android:layout_height="57dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="52dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/battery_decorate" />

        <ProgressBar
            android:id="@+id/batteryProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar_battery" />

        <TextView
            android:id="@+id/mainpage_battery_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/battery_initial_text"
            android:textSize="@dimen/bigfont"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/compass_pointer"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/batterylayout"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/batterylayout"
        android:src="@drawable/compass_pointer" />

    <RelativeLayout
        android:id="@+id/mainpage_wifiintensity_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/batterylayout"
        android:layout_marginLeft="26dp"
        android:layout_toRightOf="@id/compass_pointer" >

        <ImageView
            android:id="@+id/wifiIntensity"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/wifi_intensity_levellist" />

        <ImageView
            android:id="@+id/mainpage_connection_establish_indicator"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/error" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainpage_volumeadjust_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/batterylayout"
        android:layout_below="@id/batterylayout"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp" >

        <ImageView
            android:id="@+id/config_cf_button"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:src="@drawable/volume_lable" />

        <ProgressBar
            android:id="@+id/volumeProgressBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:max="100"
            android:progress="20"
            android:progressDrawable="@drawable/progressbar_mainpage_volume" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scanlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainpage_volumeadjust_layout"
        android:layout_marginBottom="-20dp"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/mainpage_volumeadjust_layout"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@drawable/mainpage_channel_display" />

        <Button
            android:id="@+id/mainpage_scan"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:background="@color/BLACK"
            android:text="SCAN"
            android:textColor="@color/WHITE" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mainpage_config_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mainpage_volumeadjust_layout"
        android:layout_alignLeft="@+id/mainpage_wifiintensity_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/mainpage_config_button" />

</RelativeLayout>